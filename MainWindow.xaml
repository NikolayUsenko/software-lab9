<Window x:Class="software_lab9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:software_lab9"
        mc:Ignorable="d"
        Title="Ответ: " Height="420" Width="466"
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        <RadioButton IsChecked="True" Margin="5" Name="Radio1">
            <WrapPanel>
                <Image Source="/Images/p1.png" Height="30"/>
                <GroupBox Header="Parameters">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="a" Grid.Column="0" Grid.Row="0"/>
                        <TextBox Text="0,00" Grid.Column="1" Grid.Row="0"
                                   MinWidth="70" Name="R1TextA"/>
                        <Label Content="f" Grid.Column="0" Grid.Row="1"/>
                        <ComboBox Grid.Column="1" Grid.Row="1" SelectedIndex="0"
                                  Name="R1ComboF">
                            <ComboBoxItem>4</ComboBoxItem>
                            <ComboBoxItem>5</ComboBoxItem>
                            <ComboBoxItem>6</ComboBoxItem>
                            <ComboBoxItem>7</ComboBoxItem>
                            <ComboBoxItem>8</ComboBoxItem>
                            <ComboBoxItem>9</ComboBoxItem>
                        </ComboBox>
                    </Grid>
                </GroupBox>
            </WrapPanel>
        </RadioButton>
        <RadioButton Margin="5" Name="Radio2">
            <StackPanel>
                <Image Source="/Images/p2.png" Height="23"/>
                <GroupBox Header="Parameters">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="a"/>
                        <TextBox Text="0,00" MinWidth="70" Name="R2TextA"/>
                        <Label Content="b"/>
                        <TextBox Text="0,00" MinWidth="70" Name="R2TextB"/>
                        <Label Content="f"/>
                        <ComboBox MinWidth="100" Name="R2ComboF"
                                  SelectedIndex="0">
                            <ComboBoxItem>10</ComboBoxItem>
                            <ComboBoxItem>20</ComboBoxItem>
                            <ComboBoxItem>30</ComboBoxItem>
                            <ComboBoxItem>40</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </RadioButton>
        <RadioButton Margin="5" Name="Radio3">
            <StackPanel>
                <Image Source="/Images/p3.png" Height="30"/>
                <GroupBox Header="Parameters">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="a"/>
                        <TextBox Text="0,00" MinWidth="50" Name="R3TextA"/>
                        <Label Content="b"/>
                        <TextBox Text="0,00" MinWidth="50" Name="R3TextB"/>
                        <Label Content="c"/>
                        <ComboBox MinWidth="50" SelectedIndex="0" Name="R3ComboC">
                            <ComboBoxItem>0</ComboBoxItem>
                            <ComboBoxItem>1</ComboBoxItem>
                        </ComboBox>
                        <Label Content="d"/>
                        <ComboBox MinWidth="70" SelectedIndex="0" Name="R3ComboD">
                            <ComboBoxItem>-1</ComboBoxItem>
                            <ComboBoxItem>0</ComboBoxItem>

                            <ComboBoxItem>1</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </RadioButton>
        <RadioButton Margin="5" Name="Radio4">
            <WrapPanel>
                <Image Source="/Images/p4.png" Height="60"/>
                <Label Content="c" VerticalAlignment="Center"/>
                <ComboBox MinWidth="70" VerticalAlignment="Center" Name="R4ComboC"
                          SelectedIndex="0">
                    <ComboBoxItem>0</ComboBoxItem>
                    <ComboBoxItem>1</ComboBoxItem>
                    <ComboBoxItem>2</ComboBoxItem>
                </ComboBox>
                <Label Content="d" VerticalAlignment="Center"/>
                <TextBox Text="0,00" Width="70"
                         VerticalAlignment="Center" Name="R4TextD"/>
                <Label Content="a" VerticalAlignment="Center"/>
                <TextBox Text="0,00" Width="70"
                         VerticalAlignment="Center" Name="R4TextA"/>
            </WrapPanel>
        </RadioButton>
        <Button Content="Считать" Width="100" Click="Calc_CLick"/>
    </StackPanel>
</Window>
