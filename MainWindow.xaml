<Window x:Class="software_lab9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:software_lab9"
        mc:Ignorable="d"
        Title="Ответ: "
        MinHeight="330"
        MinWidth="450"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="/Images/formula.png" Height="150" Width="450"
               Grid.Row="0"/>
        <GroupBox Header="Параметры" Grid.Row="1" HorizontalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <Label Content="x" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"/>
                <TextBox Text="0,00" Grid.Column="1" Grid.Row="0" Padding="5"
                         Name="TextX" VerticalAlignment="Center"/>
                <Label Content="y" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"/>
                <TextBox Text="0,00" Grid.Column="1" Grid.Row="1" Padding="5"
                         Name="TextY" VerticalAlignment="Center"/>
                <Label Content="N" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="3" Grid.Row="0" Padding="5"
                          SelectedIndex="0" Name="ComboN" VerticalAlignment="Center">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="5"/>
                </ComboBox>
                <Label Content="K" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="3" Grid.Row="1" Padding="5"
                          SelectedIndex="0" Name="ComboK" VerticalAlignment="Center">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="5"/>
                </ComboBox>
            </Grid>
        </GroupBox>
        <Button Content="Считать" MinWidth="100" MaxWidth="300" Margin="15" Grid.Row="2" Click="Button_Click"/>
    </Grid>
</Window>
